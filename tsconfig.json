{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "paths": {
      "proto/*": [
        "./build/proto/*"
      ]
    },
    // "sourceMap": true,
    // "sourceRoot": "./", // Non-empty sourceRoot prevents tsc from outputting source paths relative to the map file.
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  }
}